{% extends ':admin:index.html.twig' %}
{% import "macros.html" as macros %}
{% block body_row %}
    <div class="col-sm-12 text-left">
        <div class="pull-right">
            {{ macros.create_new_entry('user_new') }}
        </div>
        <h1>User list</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a class="btn btn-default" href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        <a class="btn btn-default" href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
